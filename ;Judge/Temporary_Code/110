#include <stdio.h>
#include <string.h>
#include <iostream>
#include <algorithm>

using namespace std;

int JZ[10000][10000];

int x_b, y_b;
int x_m, y_m;

int Ans = 0;

int GetAns(int x, int y)
{
	if (JZ[x][y] == 2)
	{
		Ans += 1;
		return 1;
	}
	else if (JZ[x][y] == 0 && x <= x_b && y <= y_b)
	{
		return GetAns(x + 1, y) + GetAns(x, y + 1);
	}
}
int main()
{
	scanf("%d%d%d%d", &x_b, &y_b, &x_m, &y_m);

	JZ[x_m][y_m] = 1;
	JZ[x_m - 2][y_m - 1] = 1;
	JZ[x_m - 2][y_m + 1] = 1;
	JZ[x_m + 2][y_m - 1] = 1;
	JZ[x_m + 2][y_m + 1] = 1;
	JZ[x_m - 1][y_m - 2] = 1;
	JZ[x_m - 1][y_m + 2] = 1;
	JZ[x_m + 1][y_m - 2] = 1;
	JZ[x_m + 1][y_m + 2] = 1;
	
	JZ[x_b][y_b] = 2;

	GetAns(0, 0);
	printf("%d", Ans);

	return 0;
}