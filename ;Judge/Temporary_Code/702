#include <stdio.h>

long long Num;

bool check(long long inum)
{
	if (inum + inum / 2 <= Num)
		return true;
	else
		return false;
}
int main()
{
	scanf("%lld", &Num);

	long long l = 0, r = Num;
	long long ans = 0;

	while (l <= r)
	{
		long long mid = (r + l) / 2;

		if (check(mid))
		{
			ans = mid;
			l = mid + 1;
		}
		else
		{
			r = mid - 1;
		}
	}

	printf("%lld", ans);

	return 0;
}
