#include <stdio.h>

int main()
{
	int n;
	scanf("%d", &n);
	
	double ans = 0.0;

	int maxNum = n + 1;
	int startNum = n * 2 - 1;

	ans += 2 * 1.0 / startNum;

	for (int i = 3; i <= maxNum; i++)
	{
		double fm = startNum * 1.0, fz = fm - 1.0;

		double iE = i;
		for (int j = 1; j < i; j++)
		{
			if (j == i - 1)
				fz = j * 1.0;

			iE *= fz / fm;

			fz -= 2.0;
			fm -= 1.0;
		}

		ans += iE;
	}

	printf("%.3f", ans);
	return 0;
}