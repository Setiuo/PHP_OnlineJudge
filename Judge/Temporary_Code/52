import sys

def Min(a, b):
    if a < b:
        return a;
    else:
        return b;

for line in sys.stdin:
    x = line.split();

x = [int(item) for item in x]

x.sort();

ans = int(x[1]) - int(x[0]) + int(x[2]) - int(x[0]);
ans = Min(int(x[2]) - int(x[1]) + int(x[1]) - int(x[0]), int(ans));
ans = Min(int(x[2]) - int(x[1]) + int(x[2]) - int(x[0]), int(ans));

print (int(ans))