#include<bits/stdc++.h>
using namespace std;
int n;
int dp[100][100];
int bin[100];
void pre()
{
	dp[0][0]=1;
	for(int i=1;i<=2*n;i++)
	{
		dp[i][0]=1;
		for(int j=1;j<i;j++)
		{
			dp[i][j]=dp[i-1][j-1]+dp[i-1][j];
		}
		dp[i][i]=1;
	}
	bin[0]=1;
	for(int i=1;i<=n;i++)
	{
		bin[i]=bin[i-1]<<1;
	}
}
int main()
{
	scanf("%d",&n);
	pre();
	double ans=0;
	for(int i=2;i<=n+1;i++)
	{
		double t=(double)(bin[i-2]*dp[n-1][i-2])/((double)(dp[2*n-1][i-1]));
		//cout<<t<<endl;
		ans+=t*(double)(i);
	}
	printf("%.3f",ans);
}
