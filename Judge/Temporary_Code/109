#include <stdio.h>
#include <string.h>
#include <iostream>
#include <algorithm>

using namespace std;

int x_b, y_b;
int x_m, y_m;

int Ans = 0;

struct CtrlPos
{
	int x, y;
};
CtrlPos Ctrl[9];

int GetAns(int x, int y)
{
	if (x == x_b && y == y_b)
	{
		Ans += 1;
		return 1;
	}
	else if (x <= x_b && y <= y_b)
	{
		bool pd = true;

		for (int i = 0; i < 9; i++)
		{
			if (Ctrl[i].x == x && Ctrl[i].y == y)
			{
				pd = false;
				break;
			}
		}

		if (pd)
		{
			return GetAns(x + 1, y) + GetAns(x, y + 1);
		}
	}
}
int main()
{
	scanf("%d%d%d%d", &x_b, &y_b, &x_m, &y_m);

	Ctrl[0].x = x_m;
	Ctrl[0].y = y_m;

	Ctrl[1].x = x_m - 1;
	Ctrl[1].y = y_m - 2;

	Ctrl[2].x = x_m - 1;
	Ctrl[2].y = y_m + 2;

	Ctrl[3].x = x_m + 1;
	Ctrl[3].y = y_m - 2;

	Ctrl[4].x = x_m + 1;
	Ctrl[4].y = y_m + 2;

	Ctrl[5].x = x_m - 2;
	Ctrl[5].y = y_m + 1;

	Ctrl[6].x = x_m - 2;
	Ctrl[6].y = y_m - 1;

	Ctrl[7].x = x_m + 2;
	Ctrl[7].y = y_m + 1;

	Ctrl[8].x = x_m + 2;
	Ctrl[8].y = y_m - 1;

	GetAns(0, 0);
	printf("%d", Ans);

	return 0;
}