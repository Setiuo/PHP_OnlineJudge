#include <stdio.h>

int main()
{
	int L, M;
	scanf("%d%d", &L, &M);

	static int AllTree[10010] = {};

	for (int i = 1; i <= M; i++)
	{
		int start, end;
		scanf("%d%d", &start, &end);

		AllTree[start]++;
		AllTree[end + 1]--;
	}

	for (int i = 1; i <= L; i++)
	{
		AllTree[i] += AllTree[i - 1];
	}

	int ans = 0;

	for (int i = 0; i <= L; i++)
	{
		if (AllTree[i] == 0)
			ans++;
	}

	printf("%d\n", ans);

	return 0;
}